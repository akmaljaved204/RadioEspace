<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewBlure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
        android:src="@drawable/icon_espace"
        android:layout_alignBottom="@+id/relativeLine" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:background="#33000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/relativeLayouttopImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

            <TextView
                android:id="@+id/txtRadioDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtText"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="RADIO ESPACE"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whiteColor" />
            <TextView
                android:id="@+id/txtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:visibility="gone"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="En ce moment sur"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whiteColor" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relatveImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayouttopImage"
            android:layout_centerHorizontal="true"
            android:background="#909090"
            android:layout_marginTop="60dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgRadioDashboardImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

         <RelativeLayout
            android:id="@+id/RelativeLayoutPlayerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@color/blackTransparent"
             android:layout_marginTop="5dp"
            android:layout_below="@+id/txtArtstDescrp">
             <LinearLayout
                 android:id="@+id/llActionContainer"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true"
                 android:weightSum="3"
                 android:orientation="horizontal">
                 <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:orientation="horizontal"
                     android:id="@+id/llFavorite">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <ImageView
                             android:id="@+id/imageView1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:adjustViewBounds="true"
                             android:layout_centerHorizontal="true"
                             android:src="@drawable/list_fav_icon"
                             android:layout_centerVertical="true"/>
                         <RelativeLayout
                             android:layout_width="2dp"
                             android:layout_height="match_parent"
                             android:background="#9b9ca3"
                             android:layout_marginTop="5dp"
                             android:layout_marginBottom="5dp"
                             android:layout_alignParentRight="true">

                         </RelativeLayout>
                     </RelativeLayout>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:orientation="horizontal"
                     android:id="@+id/llEmail">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <ImageView
                             android:id="@+id/imageView2"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:adjustViewBounds="true"
                             android:layout_centerHorizontal="true"
                             android:src="@drawable/contact"
                             android:layout_centerVertical="true"/>
                         <RelativeLayout
                             android:layout_width="2dp"
                             android:layout_height="match_parent"
                             android:background="#9b9ca3"
                             android:layout_marginTop="5dp"
                             android:layout_marginBottom="5dp"
                             android:layout_alignParentRight="true">

                         </RelativeLayout>
                     </RelativeLayout>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:layout_width="0dp"
                     android:orientation="horizontal"
                     android:id="@+id/llShare">
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                         <ImageView
                             android:id="@+id/imageView3"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:adjustViewBounds="true"
                             android:layout_centerHorizontal="true"
                             android:src="@drawable/share_icon"
                             android:layout_centerVertical="true"/>
                         <RelativeLayout
                             android:layout_width="2dp"
                             android:layout_height="match_parent"
                             android:background="#9b9ca3"
                             android:layout_marginTop="5dp"
                             android:layout_marginBottom="5dp"
                             android:layout_alignParentRight="true">

                         </RelativeLayout>
                     </RelativeLayout>
                 </LinearLayout>

             </LinearLayout>

         </RelativeLayout>
        <ImageView
            android:id="@+id/imagePayPause"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/relatveImg"
            android:layout_centerHorizontal="true"
            android:src="@drawable/radio_player_pause_btn"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imagePayPause"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Charlie Parker"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor" />

        <TextView
            android:id="@+id/txtArtstDescrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtArtistName"
            android:layout_alignRight="@+id/txtArtistName"
            android:layout_below="@+id/txtArtistName"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="The Essential"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteColor" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/blackColor" >
    </RelativeLayout>

</RelativeLayout>