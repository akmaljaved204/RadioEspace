<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/application_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container2345"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <Button
                    android:id="@+id/btnOpenDrawer"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu_icon" />

                <TextView
                    android:id="@+id/txtTitleOfRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="les plus"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/whiteColor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/btnOpenDrawer"
                    android:layout_toEndOf="@+id/btnOpenDrawer" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeHeader"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rmMainContainer"
                    android:paddingBottom="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rlUpperPortion">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PARTAGEZ REDIO ESPACE"
                            android:background="@color/blackTransparent"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:id="@+id/txtPartager"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/whiteColor"/>

                        <RelativeLayout
                            android:id="@+id/partagerEmailLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/txtPartager"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:id="@+id/partagerEmailImage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_share" />

                            <TextView
                                android:id="@+id/txtPartagerEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_toRightOf="@+id/partagerEmailImage"
                                android:text="Partager l’application"
                                android:textStyle="bold"
                                android:textColor="@color/whiteColor" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/partagerNoterLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/partagerEmailLayout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <ImageView
                                android:id="@+id/partagerNoterImage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/icon_note" />

                            <TextView
                                android:id="@+id/txtpartagerNoter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/partagerNoterImage"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Noter l’application"
                                android:textStyle="bold"
                                android:textColor="@color/whiteColor" />
                        </RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlUpperPortion"
                        android:id="@+id/rlLowerPortion">
                        <RelativeLayout
                            android:id="@+id/surviveMainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SUIVRE RADIO ESPACE"
                                android:background="@color/blackTransparent"
                                android:layout_marginTop="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:id="@+id/txtSuivreODS"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/whiteColor"/>

                            <RelativeLayout
                                android:id="@+id/surviveLyonmagLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/txtSuivreODS"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:id="@+id/surviveLyonmagImage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_espace" />

                                <TextView
                                    android:id="@+id/txtSurviveLyonmag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@+id/surviveLyonmagImage"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Visiter le site de Radio Espace"
                                    android:textStyle="bold"
                                    android:textColor="@color/whiteColor"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/surviveFacebookLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/surviveLyonmagLayout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:id="@+id/surviveFacebookImage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_facebook" />

                                <TextView
                                    android:id="@+id/txtSurviveFacebook"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@+id/surviveFacebookImage"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Radio Espace sur Facebook"
                                    android:textStyle="bold"
                                    android:textColor="@color/whiteColor" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/surviveTwitterLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/surviveFacebookLayout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:id="@+id/surviveTwitterImage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_twitter" />

                                <TextView
                                    android:id="@+id/txtSurviveTwitter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@+id/surviveTwitterImage"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Radio Espace sur Twitter"
                                    android:textStyle="bold"
                                    android:textColor="@color/whiteColor"  />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/surviveGPlusLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/surviveTwitterLayout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:id="@+id/surviveGPlsImage"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_google" />

                                <TextView
                                    android:id="@+id/txtSurviveGpls"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@+id/surviveGPlsImage"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Radio Espace sur Google +"
                                    android:textStyle="bold"
                                    android:textColor="@color/whiteColor" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlForShreInstgrm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/surviveGPlusLayout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:id="@+id/imgInstgrm"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/icon_instagram" />

                                <TextView
                                    android:id="@+id/txtInstgrm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@+id/imgInstgrm"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Radio Espace sur Instagram"
                                    android:textStyle="bold"
                                    android:textColor="@color/whiteColor" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="egingenierie.radioespace.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>